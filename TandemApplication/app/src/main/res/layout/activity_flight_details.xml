<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iqbal.tandemapplication.FlightDetailsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Number: "
        android:id="@+id/lblFlightNum"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="210dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Year: "
        android:id="@+id/lblYear"
        android:layout_below="@+id/lblFlightNum"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Land Success: "
        android:id="@+id/lblSuccess"
        android:layout_below="@+id/lblYear"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Links: "
        android:id="@+id/lblLinks"
        android:layout_below="@+id/lblSuccess"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:id="@+id/tvFlightNum"
        android:layout_alignTop="@+id/lblFlightNum"
        android:layout_toRightOf="@+id/lblFlightNum"
        android:layout_toEndOf="@+id/lblFlightNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/tvLaunchYear"
        android:layout_above="@+id/lblSuccess"
        android:layout_alignLeft="@+id/tvFlightNum"
        android:layout_alignStart="@+id/tvFlightNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success"
        android:id="@+id/tvSuccess"
        android:layout_alignTop="@+id/lblSuccess"
        android:layout_alignLeft="@+id/tvLaunchYear"
        android:layout_alignStart="@+id/tvLaunchYear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Links"
        android:id="@+id/tvLinks"
        android:layout_below="@+id/tvSuccess"
        android:layout_alignLeft="@+id/tvSuccess"
        android:layout_alignStart="@+id/tvSuccess" />
</RelativeLayout>
